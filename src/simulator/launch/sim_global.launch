<?xml version="1.0"?>
<launch>
    <!-- drone init state -->
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0"/>
    <arg name="R" default="0"/>
    <arg name="P" default="0"/>
    <arg name="Y" default="0"/>
    <!-- fixed frame id -->
    <arg name="frame_id" default="map"/>
    <!-- pcl topic name -->
    <arg name="pcl_topic" default="/pointcloud/output"/>

    <!-- PX4 SITL, Gazebo, and MAVROS -->
    <include file="$(find simulator)/launch/px4_utils.launch">
        <arg name="x" value="$(arg x)"/>
        <arg name="y" value="$(arg y)"/>
        <arg name="z" value="$(arg z)"/>
        <arg name="R" value="$(arg R)"/>
        <arg name="P" value="$(arg P)"/>
        <arg name="Y" value="$(arg Y)"/>
    </include>

    <!-- publish pointcloud -->
    <node pkg="simulator" type="publish_pointcloud" name="publish_pointcloud">
        <param name="path" type="str" value="$(find simulator)/worlds/my_world.pcd" />
        <param name="frame_id" type="str" value="$(arg frame_id)" />
        <param name="topic" type="str" value="$(arg pcl_topic)" />
        <param name="hz" type="int" value="2" />
    </node>

    <!-- map_server -->
    <include file="$(find simulator)/launch/map_server.launch">
        <arg name="frame_id" value="$(arg frame_id)"/>
        <arg name="pcl_topic" value="$(arg pcl_topic)"/>
        <arg name="sensor_max_range" value="inf" />
    </include>

    <!-- TF -->
    <include file="$(find simulator)/launch/tf_server.launch">
        <arg name="x" value="$(arg x)"/>
        <arg name="y" value="$(arg y)"/>
        <arg name="z" value="$(arg z)"/>
        <arg name="R" value="$(arg R)"/>
        <arg name="P" value="$(arg P)"/>
        <arg name="Y" value="$(arg Y)"/>
    </include>

    <!-- Visualizer -->
    <node pkg="simulator" type="visualizer_node.py" name="visualizer" />

    <!-- Rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find simulator)/rviz/rviz_config.rviz" />

    <!-- FSM Manager -->
    <!-- <node pkg="planner" type="manager_node.py" name="manager" /> -->

    <!-- plotjunggler -->
    <node pkg="plotjuggler" type="plotjuggler" name="plotjuggler" args="-l $(find simulator)/rviz/plotjuggler_config.xml" />

</launch>